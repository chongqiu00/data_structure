{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build active file",//一定与preLaunchTask一致
            "command": "C:\\MinGw64\\mingw64\\bin\\g++.exe", //改为你自己的路径
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\MinGw64\\mingw64\\bin"    //改为自己的路径的bin文件夹
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}